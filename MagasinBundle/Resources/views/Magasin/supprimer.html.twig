{% extends 'NewstoreMagasinBundle::layoutbundle.html.twig' %}

{%block content%}
<h2>Supprimer un article</h2>
<hr/>
<p>
    Etes-vous certain de vouloir supprimer le magasin "{{ magasin.designation }}" ?
</p>

<form action="{{ path('newstore_magasin_supprimer', {'id': magasin.id}) }}" method="post">
    <a href="{{ path('newstore_magasin_voir', {'id': magasin.id}) }}" class="btn">
        <i class="icon-chevron-left"></i>
        Retour &agrave; la liste
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
</form>

  {%endblock%}